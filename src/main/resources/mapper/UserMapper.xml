<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTDMapper3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gg.duonduo.mapper.UserMapper">

    <select id="userList" resultType="com.gg.duonduo.domain.UserDto">
        SELECT *
        FROM user
        ORDER BY id
    </select>

    <select id="fetchUserByID" resultType="com.gg.duonduo.domain.UserDto"
            parameterType="int">
        SELECT *
        FROM user
        WHERE id = #{id}
    </select>

    <insert id="insertUser" parameterType="com.gg.duonduo.domain.UserDto">
        INSERT INTO user(password, salt, email)
        VALUES (#{password}, #{salt}, #{email})
    </insert>

    <delete id="deleteUser" parameterType="int">
        DELETE
        FROM user
        WHERE id = #{id}
    </delete>

    <update id="updateUser" parameterType="com.gg.duonduo.domain.UserDto">
        UPDATE user
        SET password = #{password},
            salt  = #{salt},
            email       = #{email}
        WHERE id = #{id}
    </update>

</mapper>
